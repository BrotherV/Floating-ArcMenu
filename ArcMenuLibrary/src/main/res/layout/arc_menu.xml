<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.bvapp.arcmenulibrary.widget.ArcLayout
        android:id="@+id/arcmenu_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

    </com.bvapp.arcmenulibrary.widget.ArcLayout>


    <FrameLayout
        android:id="@+id/layArcMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.bvapp.arcmenulibrary.widget.FloatingActionButton
            android:id="@+id/fabArcMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imgPlusIcon"
            android:layout_width="@dimen/fab_plus_width"
            android:layout_height="@dimen/fab_plus_width"
            android:src="@drawable/plus"
            android:layout_gravity="center"
            />
    </FrameLayout>

</FrameLayout>
